@model IEnumerable<MVC_Database_Project4.Models.Customer>
@{
}
@if (Model.Count() <= 0)
{
                <p class="text-center" text-danger>Customer was not found at the location !</p>
}
else
{
 <table class="table-bordered">
        <tr>
            <td>Name</td>
            <th>Email</th>
        </tr>
        @foreach (var cust in Model)
        {
            <tr>
                <td>@cust.Name</td>
                <td>@cust.Email</td>
            </tr>
        }
    </table>
}